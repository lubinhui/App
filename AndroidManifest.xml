<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.biyesheji.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />
  	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:name="com.biyesheji.android.CommandApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/Transparent">
        <activity
            android:name="com.biyesheji.android.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="com.biyesheji.android.activity.SettingActivity"
            android:screenOrientation="portrait"
            ></activity>
        <activity 
            android:name="com.biyesheji.android.activity.DingdanDetailActivity"
            android:screenOrientation="portrait"></activity>
        <activity 
            android:name="com.biyesheji.android.activity.UserInfoActivity"
            android:screenOrientation="portrait"
            ></activity>
        <activity 
            android:name="com.biyesheji.android.activity.LoginActivity"
            android:screenOrientation="portrait"></activity>
        <activity 
            android:name="com.biyesheji.android.activity.RegisterActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>